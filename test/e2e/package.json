{
  "name": "@videomark/e2e-test",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "echo dummy",
    "test": "jest"
  },
  "dependencies": {
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^5.2.1"
  },
  "jest": {
    "//": "pnpm との相性問題を回避 https://jestjs.io/docs/configuration#transformignorepatterns-arraystring",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "preset": "jest-puppeteer",
    "globalSetup": "./setup.js",
    "globalTeardown": "./teardown.js",
    "testRunner": "jest-circus/runner"
  }
}
