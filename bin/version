#!/bin/bash
# extension に含まれる manifest.json のバージョンアップ
# 要: jq, lerna
set -euo pipefail
cd -- "$(dirname -- "$0")/.."
export VIDEOMARK_VERSION=${VIDEOMARK_VERSION:-$(jq -r .version lerna.json)}
version() {
  jq .version=env.VIDEOMARK_VERSION manifest.json \
    > manifest.json.tmp
  mv manifest.json{.tmp,}
  echo "${VIDEOMARK_VERSION}"
}
version
git add .
